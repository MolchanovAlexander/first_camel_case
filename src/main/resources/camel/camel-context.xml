        <route id="consume-route">
            <from uri="{{app.queue.consume}}"/>
            <log message="---Received msg: ${header.CamelFileName}"/>
            <to uri="direct:processFile"/>
        </route>

        <route id="process-route">
            <from uri="direct:processFile"/>
            <log message="&lt;&lt;Processing Message - Content: ${body}"/>
            <process ref="firstProcessor2"/>
