<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://camel.apache.org/schema/spring https://camel.apache.org/schema/spring/camel-spring.xsd">

    <bean class="com.example.first_camel_case.processor.FirstProcessor" id="firstProcessor2"/>

    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <route id="consume-route">
            <from uri="{{app.queue.consume}}"/>
            <log message="---Received msg: ${header.CamelFileName}"/>
            <to uri="direct:processFile"/>
        </route>

        <route id="process-route">
            <from uri="direct:processFile"/>
            <log message="&lt;&lt;Processing Message - Content: ${body}"/>
            <process ref="firstProcessor2"/>
            <log message="Content after processing: ${body}"/>
            <to uri="{{app.queue.produce}}"/>
        </route>

        <route id="produce-route">
            <from uri="{{app.queue.produce}}"/>
            <log message="from Produce - Received msg: ${header.CamelFileName}"/>

        </route>
    </camelContext>

</beans>
