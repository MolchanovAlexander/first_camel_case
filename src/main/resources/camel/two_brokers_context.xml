<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://camel.apache.org/schema/spring https://camel.apache.org/schema/spring/camel-spring.xsd">


    <camelContext id="primaryCamelContext" xmlns="http://camel.apache.org/schema/spring" trace="false">

        <route id="dno">
            <from uri="brokerComponentA:queue:IN"/>
            <log message="isDigit result: ${bean:analizeBean.isDigit(${body})}"/>
            <to uri="brokerComponentB:queue:ANALIZE.NUM"/>
            <choice>
                <when>
                    <method ref="analizeBean" method="isDigit"/>
                    <log message="1_________1: ${body}"/>
                    <to uri="brokerComponentB:queue:ANALIZE.NUM"/>
                </when>
                <otherwise>
                    <log message="2__________2: ${body}"/>
                    <to uri="brokerComponentB:queue:ANALIZE.CHAR"/>
                </otherwise>
            </choice>


        </route>
        <route id="testRoute">
            <from uri="brokerComponentB:queue:IN"/>
            <log message="Received message body: ${body}"/>
            <to uri="brokerComponentA:queue:ANALIZE.NUM"/>
        </route>

    </camelContext>

    <bean class="com.example.first_camel_case.processor.AnalizeBean" id="analizeBean"/>

    <bean id="brokerComponentA" class="org.apache.camel.component.activemq.ActiveMQComponent">
        <property name="connectionFactory" ref="brokerA"/>
    </bean>

    <bean id="brokerComponentB" class="org.apache.camel.component.activemq.ActiveMQComponent">
        <property name="connectionFactory" ref="brokerB"/>
    </bean>

    <bean id="brokerA" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="tcp://localhost:61616"/>
    </bean>

    <bean id="brokerB" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="tcp://localhost:61617"/>
    </bean>

</beans>